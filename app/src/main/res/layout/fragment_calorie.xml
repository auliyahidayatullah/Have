<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.calorie.CalorieFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/tesview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="21dp"
                android:text="@string/calorie"
                android:textSize="33sp"
                android:textStyle="bold"
                style="@style/CustomTextView" />

            <TextView
                android:id="@+id/header_bigCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="33dp"
                android:text="@string/your_calories"
                android:textSize="24sp"
                android:textStyle="bold"
                style="@style/CustomTextView" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:text="@string/targets"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    style="@style/CustomTextView" />

                <TextView
                    android:id="@+id/textCalorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_1500_kcal"
                    android:textSize="15sp"
                    style="@style/CustomTextView"
                    android:layout_marginStart="5dp" />
            </LinearLayout>


            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/calorie_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="21dp" />

            <TextView
                android:id="@+id/errorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone"
                android:text="@string/error_loading_data"/>

            <FrameLayout
                android:id="@+id/top_calorie_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp" />

            <FrameLayout
                android:id="@+id/food_rec_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="90dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/extended_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:contentDescription="@string/add_food"
        android:text="@string/add_food"
        android:textSize="18sp"
        app:icon="@drawable/baseline_photo_camera_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.menu.sleep.SleepFragment">

    <TextView
        android:id="@+id/header_sleep"
        android:text="@string/sleep_analysis"
        style="@style/CustomTextView"
        android:textStyle="bold"
        android:textSize="33sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="21dp"
        android:layout_marginTop="21dp"/>

    <TextView
        android:id="@+id/tv_date"
        android:text="@string/currentdate"
        style="@style/CustomTextView"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_sleep"
        android:layout_marginStart="21dp"
        android:layout_marginTop="7dp"/>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_sleep"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="45.42dp"
        android:layout_marginStart="103.42dp"
        android:layout_marginEnd="103.42dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_date" />

    <TextView
        android:id="@+id/tv_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quality"
        android:textColor="@color/green"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/progress_sleep"
        app:layout_constraintStart_toStartOf="@id/progress_sleep"
        app:layout_constraintEnd_toEndOf="@id/progress_sleep"
        android:layout_marginTop="70dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/sleep_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/percentage"
        android:textColor="@color/green"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_quality"
        app:layout_constraintStart_toStartOf="@id/progress_sleep"
        app:layout_constraintEnd_toEndOf="@id/progress_sleep"
        android:gravity="center"/>

    <TextView
        android:id="@+id/sleep_hour"
        android:text="@string/sleep_hour"
        style="@style/CustomTextView"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_sleep"/>

    <TextView
        android:id="@+id/tv_duration"
        android:text="@string/sleep_duration"
        style="@style/CustomTextView"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sleep_hour"/>

    <include
        android:id="@+id/itemCard"
        layout="@layout/item_sleep_time"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/tv_duration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/statistic_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/itemCard"/>
</androidx.constraintlayout.widget.ConstraintLayout>

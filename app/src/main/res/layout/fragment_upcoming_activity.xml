<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iu.UpcomingActivityFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvUpcomingAct"
        android:text="Upcoming Activity"
        style="@style/CustomTextView"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="25dp">

            <ImageView
                android:id="@+id/iconActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_activity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvActivityTitle"
                style="@style/CustomTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="23.97dp"
                android:text="Go to Work"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/iconActivity"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iconTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23.97dp"
                android:src="@drawable/ic_time"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iconActivity"
                app:layout_constraintTop_toBottomOf="@id/tvActivityTitle" />

            <TextView
                android:id="@+id/tvActivityTime"
                android:layout_marginStart="9dp"
                style="@style/CustomTextView"
                android:text="9:40 a.m."
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/iconTime"
                app:layout_constraintTop_toBottomOf="@id/tvActivityTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
